---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import AboutUs from '../components/AboutUs.astro';
import ServiciosGrid from '../components/ServiciosGrid.astro';
import TeamSection from '../components/TeamSection.astro';
import TransformationGallery from '../components/ui/TransformationGallery.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import FAQAccordion from '../components/ui/FAQAccordion.astro';
import BlogSection from '../components/BlogSection.astro';
import BackToTop from '../components/ui/BackToTop.astro';
import ScrollReveal from '../components/animations/ScrollReveal.astro';
---

<Layout 
  title="Jairo Traine - Entrenador Personal | Soy tu mayor fan"
  description="Transforma tu cuerpo y tu vida con Jairo Traine. Entrenamiento personalizado, seminarios motivacionales y planes adaptados a tus objetivos. Soy tu mayor fan."
  keywords="entrenador personal, fitness, gym, entrenamiento personalizado, nutrición, transformación física, motivación, seminarios fitness, Jairo Traine"
>
  <main>
    <HeroSection />
    
    <ScrollReveal>
      <WhyChooseUs />
    </ScrollReveal>
    
    <ScrollReveal delay={200}>
      <AboutUs />
    </ScrollReveal>
    
    <ScrollReveal delay={300}>
      <ServiciosGrid />
    </ScrollReveal>
    
    <ScrollReveal delay={300}>
      <TransformationGallery />
    </ScrollReveal>
    
    <ScrollReveal delay={200}>
      <TeamSection />
    </ScrollReveal>
    
    <ScrollReveal delay={300}>
      <TestimonialsSection />
    </ScrollReveal>
    
    <ScrollReveal delay={200}>
      <BlogSection />
    </ScrollReveal>
    
    <ScrollReveal delay={300}>
      <FAQAccordion />
    </ScrollReveal>

    <!-- CTA Final Section -->
    <ScrollReveal>
      <section class="relative py-20 px-4 sm:px-6 lg:px-8 overflow-hidden">
        <!-- Background Image -->
        <div class="absolute inset-0 z-0">
          <img
            src="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?auto=format&fit=crop&q=80&w=1920"
            alt="Gimnasio"
            class="w-full h-full object-cover"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-b from-black/80 via-black/70 to-black/80"></div>
        </div>
        
        <div class="relative z-10 w-full max-w-[1400px] mx-auto text-center">
          <h2 class="text-4xl lg:text-6xl font-black text-white mb-6">
            TU TRANSFORMACIÓN <span class="text-primary-light">COMIENZA HOY</span>
          </h2>
          <p class="text-xl text-gray-200 mb-10 max-w-2xl mx-auto">
            No esperes el momento perfecto. El momento perfecto es ahora. Da el primer paso hacia la mejor versión de ti mismo.
          </p>
          <div class="flex flex-col sm:flex-row gap-6 justify-center">
            <a 
              href="/contacto" 
              class="inline-flex items-center justify-center px-10 py-5 bg-primary-light text-gray-900 font-black rounded-lg hover:bg-primary transition-all duration-300 transform hover:scale-105 shadow-xl hover:shadow-2xl text-lg"
            >
              <span class="font-black">OBTÉN TU PRIMERA SESIÓN GRATIS</span>
              <svg class="w-6 h-6 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a 
              href="https://wa.me/573001234567" 
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center px-10 py-5 font-bold rounded-lg transition-all duration-300 text-lg shadow-xl hover:shadow-2xl transform hover:scale-105"
              style="background: linear-gradient(135deg, #25D366 0%, #128C7E 100%); color: white; min-width: 200px; border: none;"
            >
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24" style="color: white;">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
              </svg>
              <span style="color: white; font-weight: 700;">WhatsApp Directo</span>
            </a>
          </div>
        </div>
      </section>
    </ScrollReveal>
  </main>

  
  <!-- Back to Top Button -->
  <BackToTop />
</Layout>
