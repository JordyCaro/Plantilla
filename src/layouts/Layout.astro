---
import Header from '../components/Header.astro';
// import Footer from '../components/Footer.astro';
import Analytics from '../components/analytics/Analytics.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
  image?: string;
  url?: string;
  type?: string;
}

const { 
  title,
  description = "Soy tu mayor fan. Entrenador personal especializado en transformaciones reales. Entreno cuerpos, motivo mentes y construyo hábitos que duran toda la vida.",
  keywords = "entrenador personal, entrenador personal Medellín, entrenamiento personalizado, nutrición, transformación física, bajar de peso, ganar músculo, motivación, planes nutricionales, asesoría online",
  image = "/jairo.jpg",
  url = Astro.url.href,
  type = "website"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = image?.startsWith('http') ? image : new URL(image, Astro.site).toString();
---

<!doctype html>
<html lang="es" class="scroll-smooth dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <!-- Unified viewport meta (avoid duplicates across devices) -->
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="author" content="Jairo Traine" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#4FFF85" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="apple-touch-icon" href="/logo.png" />
    <link rel="shortcut icon" href="/logo.png" />
    
    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Jairo Traine - Entrenador Personal" />
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    
    <!-- Additional SEO -->
    <meta name="generator" content={Astro.generator} />
    <meta name="format-detection" content="telephone=no" />
    
    <title>{title}</title>
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Jairo Traine",
      "description": "Entrenador personal especializado en transformaciones físicas y mentales. Soy tu mayor fan.",
      "url": "https://jairotraine.com",
      "image": "{ogImage}",
      "jobTitle": "Entrenador Personal Certificado",
      "knowsAbout": [
        "Entrenamiento Personal",
        "Nutrición Deportiva",
        "Transformación Física",
        "Motivación",
        "Fitness",
        "Coaching Deportivo"
      ],
      "hasOccupation": {
        "@type": "Occupation",
        "name": "Entrenador Personal",
        "occupationalCategory": "Health and Fitness"
      },
      "offers": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Entrenamiento Personalizado",
            "description": "Sesiones de entrenamiento personal one-on-one adaptadas a tus objetivos"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Seminarios y Talleres",
            "description": "Eventos grupales para aprender técnicas de fitness y motivación"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Planes Nutricionales",
            "description": "Guías alimenticias personalizadas para complementar tu entrenamiento"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Asesoría Online",
            "description": "Entrenamiento virtual con seguimiento constante"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Venta de Artículos Deportivos",
            "description": "Equipo y accesorios fitness seleccionados personalmente por mí para potenciar tu rendimiento"
          }
        }
      ],
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "CO",
        "addressLocality": "Medellin"
      },
      "sameAs": [
        "https://wa.me/573001234567",
        "mailto:jairo@jairotraine.com"
      ],
      "award": "Entrenador Personal Certificado",
      "alumniOf": "Instituto de Fitness y Nutrición",
      "memberOf": "Asociación Colombiana de Entrenadores Personales"
    }
    </script>
    
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Jairo Traine",
      "url": "https://jairotraine.com",
      "inLanguage": "es-ES",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://jairotraine.com/?s={search_term}",
        "query-input": "required name=search_term"
      }
    }
    </script>
    
    <!-- Additional SEO Meta Tags -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta name="bingbot" content="index, follow" />
    
    <!-- Language and Region -->
    <meta name="language" content="Spanish" />
    <meta name="geo.region" content="CO" />
    <meta name="geo.placename" content="Medellin" />
    
    <!-- Mobile Optimization -->
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://images.unsplash.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <ViewTransitions />
    <Analytics />
    
    
    <!-- Inline CSS - Essential only -->
    <style>
      html {
        scroll-behavior: smooth;
        background-color: #0b0b0b; /* igual al snap container para evitar líneas */
        height: 100%;
        /* Fallback vh variable for mobile UI chrome */
        --vh: 1vh;
      }

      body {
        overflow-x: hidden;
        width: 100%;
        margin: 0;
        background-color: #0b0b0b; /* unifica el fondo global */
        min-height: 100%;
        padding-bottom: env(safe-area-inset-bottom, 0); /* evita que el contenido quede bajo la barra */
      }

      /* Media that should never overflow the viewport */
      img, video, svg, canvas {
        max-width: 100%;
        height: auto;
      }

      * {
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE 10+ */
        box-sizing: border-box;
      }

      *::-webkit-scrollbar {
        display: none; /* Chrome, Safari, Opera */
      }

      /* Ocultar barra de herramientas de Astro en dev para evitar franja inferior */
      astro-dev-toolbar, .astro-dev-toolbar, [data-astro-dev-toolbar] {
        display: none !important;
      }

      /* Cuando existe contenedor con snap scroll, ocultar Footer global para que no genere franja */
      .snap-container ~ footer { display: none !important; }

      /* Skip to content link - Accessibility */
      .skip-link {
        position: absolute;
        top: -100px;
        left: 0;
        background: var(--tw-color-primary-dark, #2BEB6C);
        color: white;
        padding: 1rem 2rem;
        text-decoration: none;
        font-weight: bold;
        z-index: 100;
        border-radius: 0 0 0.5rem 0;
        transition: top 0.3s;
      }

      .skip-link:focus {
        top: 0;
        outline: 3px solid var(--tw-color-primary-light, #7CFF9F);
        outline-offset: 2px;
      }

      /* Respect reduced motion preference */
      @media (prefers-reduced-motion: reduce) {
        * {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
        }
        
        html {
          scroll-behavior: auto;
        }
      }
      /* Prefer dynamic viewport when available */
      @supports (height: 100dvh) {
        :root { --vh: 1dvh; }
      }
    </style>
  </head>
  <body class="bg-white dark:bg-gray-900 transition-colors duration-300 overflow-x-hidden">
    <!-- Skip to content link for screen readers -->
    <a href="#main-content" class="skip-link">Saltar al contenido principal</a>
    
    <!-- <Header /> -->
    <main id="main-content" role="main">
      <slot />
    </main>
    <!-- Footer eliminado -->
  </body>
  <script is:inline>
    // Global precise vh for all pages (handles mobile UI variance)
    (function(){
      function setVH() {
        var vh = window.innerHeight * 0.01;
        document.documentElement.style.setProperty('--vh', vh + 'px');
      }
      setVH();
      window.addEventListener('resize', setVH, { passive: true });
      window.addEventListener('orientationchange', setVH);
    })();
  </script>
</html>

