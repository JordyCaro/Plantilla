---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Analytics from '../components/analytics/Analytics.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
  image?: string;
  url?: string;
  type?: string;
}

const { 
  title,
  description = "Soy tu mayor fan. Entrenador personal especializado en transformaciones reales. Entreno cuerpos, motivo mentes y construyo hábitos que duran toda la vida.",
  keywords = "entrenador personal, fitness, gym, entrenamiento personalizado, nutrición, transformación física, motivación, seminarios fitness, Jairo Traine, perder peso, ganar músculo",
  image = "https://images.unsplash.com/photo-1534438327276-14e5300c3a48?auto=format&fit=crop&q=80&w=1200",
  url = Astro.url.href,
  type = "website"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Jairo Traine" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#7BA82F" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <link rel="shortcut icon" href="/favicon.png" />
    
    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="Jairo Traine - Entrenador Personal" />
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    <!-- Additional SEO -->
    <meta name="generator" content={Astro.generator} />
    <meta name="format-detection" content="telephone=no" />
    
    <title>{title}</title>
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Jairo Traine",
      "description": "Entrenador personal especializado en transformaciones físicas y mentales. Soy tu mayor fan.",
      "url": "https://jairotraine.com",
      "image": "https://images.unsplash.com/photo-1567013127542-490d757e51fc?auto=format&fit=crop&q=80&w=800",
      "jobTitle": "Entrenador Personal Certificado",
      "knowsAbout": [
        "Entrenamiento Personal",
        "Nutrición Deportiva",
        "Transformación Física",
        "Motivación",
        "Fitness",
        "Coaching Deportivo"
      ],
      "hasOccupation": {
        "@type": "Occupation",
        "name": "Entrenador Personal",
        "occupationalCategory": "Health and Fitness"
      },
      "offers": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Entrenamiento Personalizado",
            "description": "Sesiones de entrenamiento personal one-on-one adaptadas a tus objetivos"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Seminarios y Talleres",
            "description": "Eventos grupales para aprender técnicas de fitness y motivación"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Planes Nutricionales",
            "description": "Guías alimenticias personalizadas para complementar tu entrenamiento"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Asesoría Online",
            "description": "Entrenamiento virtual con seguimiento constante"
          }
        }
      ],
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "CO",
        "addressLocality": "Medellin"
      },
      "sameAs": [
        "https://wa.me/573001234567",
        "mailto:jairo@jairotraine.com"
      ],
      "award": "Entrenador Personal Certificado",
      "alumniOf": "Instituto de Fitness y Nutrición",
      "memberOf": "Asociación Colombiana de Entrenadores Personales"
    }
    </script>
    
    <!-- Additional SEO Meta Tags -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta name="bingbot" content="index, follow" />
    
    <!-- Language and Region -->
    <meta name="language" content="Spanish" />
    <meta name="geo.region" content="CO" />
    <meta name="geo.placename" content="Medellin" />
    
    <!-- Mobile Optimization -->
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://images.unsplash.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <ViewTransitions />
    <Analytics />
    
    <!-- Accessibility Styles -->
    <link rel="stylesheet" href="/src/styles/accessibility.css" />
    
    <!-- Performance Styles -->
    <link rel="stylesheet" href="/src/styles/performance.css" />
    
    <!-- Mobile Fixes -->
    <link rel="stylesheet" href="/src/styles/mobile-fixes.css" />
    
    <!-- Critical CSS -->
    <link rel="stylesheet" href="/src/styles/critical.css" />
    
    <!-- Performance Critical CSS -->
    <link rel="stylesheet" href="/src/styles/performance-critical.css" />
    
    
    <!-- Inline CSS - Critical Styles -->
    <style>
      /* Header Styles */
      .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 50;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        padding: 0;
        width: 100%;
      }
      
      .dark .header {
        background: rgba(17, 24, 39, 0.95);
      }
      
      .header-container {
        max-width: 80rem;
        margin: 0 auto;
        padding: 0 1rem;
      }
      
      .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 4rem;
        gap: 1rem;
      }
      
      .logo {
        font-size: 1.25rem;
        font-weight: 900;
        color: #7BA82F;
        text-decoration: none;
        white-space: nowrap;
      }
      
      .dark .logo {
        color: #B8E986;
      }
      
      .nav-desktop {
        display: none;
        gap: 2rem;
        align-items: center;
      }
      
      @media (min-width: 768px) {
        .nav-desktop {
          display: flex;
        }
      }
      
      .nav-link {
        color: #374151;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s;
      }
      
      .dark .nav-link {
        color: #d1d5db;
      }
      
      .nav-link:hover {
        color: #7BA82F;
      }
      
      .dark .nav-link:hover {
        color: #B8E986;
      }
      
      .mobile-menu-btn {
        display: block;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
        color: #374151;
      }
      
      .dark .mobile-menu-btn {
        color: #d1d5db;
      }
      
      @media (min-width: 768px) {
        .mobile-menu-btn {
          display: none;
        }
      }
      
      .mobile-menu {
        display: none;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
        background: white;
        border-top: 1px solid #e5e7eb;
      }
      
      .dark .mobile-menu {
        background: #1f2937;
        border-top-color: #374151;
      }
      
      .mobile-menu.show {
        display: flex;
      }
      
      .mobile-menu-link {
        color: #374151;
        font-weight: 500;
        text-decoration: none;
        padding: 0.5rem 0;
        transition: color 0.2s;
      }
      
      .dark .mobile-menu-link {
        color: #d1d5db;
      }
      
      /* Hero Styles */
      .hero-section {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        width: 100%;
      }
      
      .hero-bg {
        position: absolute;
        inset: 0;
        z-index: 0;
      }
      
      .hero-bg img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      
      .hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(to bottom, rgba(0,0,0,0.7), rgba(0,0,0,0.6), rgba(0,0,0,0.8));
      }
      
      .hero-content {
        position: relative;
        z-index: 10;
        max-width: 80rem;
        margin: 0 auto;
        padding: 2rem 1rem;
        text-align: center;
      }
      
      .hero-title {
        font-size: clamp(1.875rem, 8vw, 3.75rem);
        font-weight: 900;
        color: white;
        margin-bottom: 1rem;
        line-height: 1.1;
      }
      
      .hero-tagline {
        font-size: clamp(1.25rem, 6vw, 2.5rem);
        font-weight: 700;
        color: #B8E986;
        margin-bottom: 0.75rem;
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
      }
      
      .hero-description {
        font-size: clamp(1rem, 4vw, 1.25rem);
        color: #e5e7eb;
        max-width: 42rem;
        margin: 0 auto;
        padding: 0 1rem;
      }
      
      .hero-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        justify-content: center;
        align-items: center;
        margin-top: 1.5rem;
        padding: 0 1rem;
      }
      
      @media (min-width: 640px) {
        .hero-buttons {
          flex-direction: row;
          gap: 1.5rem;
        }
      }
      
      @keyframes pulse {
        0%, 100% {
          opacity: 1;
        }
        50% {
          opacity: 0.8;
        }
      }
      
    </style>
    
    <!-- Inline CSS to prevent horizontal scroll -->
    <style>
      /* Global overflow prevention */
      html {
        overflow-x: hidden;
        max-width: 100vw;
        scroll-behavior: smooth;
      }
      
      body {
        overflow-x: hidden;
        max-width: 100vw;
        position: relative;
      }
      
      /* Hide scrollbars */
      * {
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE 10+ */
      }
      
      *::-webkit-scrollbar {
        display: none; /* Chrome, Safari, Opera */
      }
      
      /* Ensure containers don't exceed viewport */
      main, section, div, article, aside, nav, header, footer {
        max-width: 100vw;
      }
      
      /* Fix for images */
      img {
        max-width: 100%;
        height: auto;
      }
      
      /* Mobile specific fixes */
      @media (max-width: 768px) {
        /* Fix for absolute positioned elements with negative values */
        .absolute[class*="-left"],
        .absolute[class*="-right"] {
          position: relative;
        }
        
        /* Fix for blur decorative elements */
        .blur-2xl,
        .blur-3xl {
          display: none;
        }
        
        /* Ensure text doesn't overflow */
        h1, h2, h3, h4, h5, h6, p, span {
          word-wrap: break-word;
          overflow-wrap: break-word;
        }
      }
      
      /* Text visibility fixes */
      .bg-primary-dark span,
      .bg-primary span,
      button span,
      a[href="/contacto"] span,
      a[href*="wa.me"] span {
        color: white;
        font-weight: 700;
      }
      
      .bg-primary-dark svg,
      .bg-primary svg,
      button svg,
      a[href="/contacto"] svg,
      a[href*="wa.me"] svg {
        color: white;
        fill: white;
        stroke: white;
      }
      
      /* WhatsApp button specific */
      a[href*="wa.me"] {
        background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
        color: white;
        border: none;
      }
      
      a[href*="wa.me"]:hover {
        background: linear-gradient(135deg, #128C7E 0%, #0D6B5F 100%);
      }
    </style>
  </head>
  <body class="bg-white dark:bg-gray-900 transition-colors duration-300 overflow-x-hidden" style="scrollbar-width: none; -ms-overflow-style: none; max-width: 100vw; overflow-x: hidden; padding-top: 0;">
    <!-- Skip to content link for screen readers -->
    <a href="#main-content" class="skip-link">Saltar al contenido principal</a>
    
    <Header />
    <main id="main-content" role="main" style="scrollbar-width: none; -ms-overflow-style: none; overflow: hidden; margin-top: 0;">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script is:inline>
  function getThemePreference() {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme');
    }
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  }

  function updateTheme() {
    if (typeof document !== 'undefined') {
      const theme = getThemePreference();
      document.documentElement.classList.toggle('dark', theme === 'dark');
      if (typeof localStorage !== 'undefined') {
        localStorage.setItem('theme', theme);
      }
    }
  }

  // Update theme on load
  updateTheme();

  // Update theme when localStorage changes
  if (typeof window !== 'undefined') {
    window.addEventListener('storage', updateTheme);
  }
</script>
