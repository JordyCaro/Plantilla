---
import ThemeToggle from './ThemeToggle';
import ScrollProgress from './ui/ScrollProgress.astro';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 dark:bg-gray-900/95 backdrop-blur-lg shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo y menú móvil -->
      <div class="flex items-center gap-4">
        <a href="/" class="text-xl font-black text-primary-dark dark:text-primary-light">
          JAIRO TRAINE
        </a>
        <!-- Botón hamburguesa -->
        <button 
          id="menu-toggle" 
          class="md:hidden p-2 text-gray-700 dark:text-gray-300"
          aria-label="Abrir menú"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-4 6h-8" />
          </svg>
        </button>
      </div>

      <!-- Navegación desktop -->
      <nav class="hidden md:flex items-center gap-8">
        <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-primary-dark dark:hover:text-primary-light font-medium">Inicio</a>
        <a href="#about" class="text-gray-700 dark:text-gray-300 hover:text-primary-dark dark:hover:text-primary-light font-medium">Sobre Mí</a>
        <a href="#servicios" class="text-gray-700 dark:text-gray-300 hover:text-primary-dark dark:hover:text-primary-light font-medium">Servicios</a>
      </nav>

      <div class="flex items-center gap-2">
        <ThemeToggle client:load />
        <a href="/contacto" class="hidden md:inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-primary-dark hover:bg-primary rounded-lg shadow-md">
          Contáctame
        </a>
      </div>
    </div>

    <!-- Menú móvil -->
    <nav id="mobile-menu" class="hidden md:hidden py-4 border-t border-gray-200 dark:border-gray-700">
      <div class="flex flex-col gap-4">
        <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-primary-dark py-2">Inicio</a>
        <a href="#about" class="text-gray-700 dark:text-gray-300 hover:text-primary-dark py-2">Sobre Mí</a>
        <a href="#servicios" class="text-gray-700 dark:text-gray-300 hover:text-primary-dark py-2">Servicios</a>
        <a href="/contacto" class="inline-flex items-center justify-center px-6 py-3 text-white bg-primary-dark hover:bg-primary rounded-lg shadow-md">
          Contáctame
        </a>
      </div>
    </nav>
  </div>
  
  <ScrollProgress />
</header>

<script>
  function initMenu() {
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');
    
    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
      
      // Cerrar menú al hacer click en un link
      menu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          menu.classList.add('hidden');
        });
      });
    }
  }
  
  document.addEventListener('DOMContentLoaded', initMenu);
  document.addEventListener('astro:page-load', initMenu);
</script>
