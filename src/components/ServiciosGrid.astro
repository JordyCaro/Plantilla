<script>
  // Protecci√≥n por prefers-reduced-motion y puntero fino
  const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
  const finePointer = window.matchMedia('(pointer: fine)').matches;
  if (!prefersReduced && finePointer) {
    document.querySelectorAll('.serviceCard[data-tilt="true"]').forEach((card) => {
      const glow = card.querySelector('.serviceCard__glow');
      card.addEventListener('mousemove', (e) => {
        const r = card.getBoundingClientRect();
        const x = e.clientX - r.left;
        const y = e.clientY - r.top;
        const cx = r.width / 2;
        const cy = r.height / 2;
        const rx = ((y - cy) / cy) * -12;
        const ry = ((x - cx) / cx) * 12;
        const angle = 135 + rx - ry;
        card.style.transform = `rotateX(${rx}deg) rotateY(${ry}deg)`;
        card.style.setProperty('--gx', `${x}px`);
        card.style.setProperty('--gy', `${y}px`);
        card.style.setProperty('--angle', `${angle}deg`);
      });
      card.addEventListener('mouseleave', () => {
        card.style.transform = 'rotateX(0deg) rotateY(0deg)';
        card.style.setProperty('--angle', '135deg');
      });
    });
  }
</script>

