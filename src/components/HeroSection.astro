<section class="hero-section">
  <!-- Background Image -->
  <div class="hero-bg">
    <img
      src="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?auto=format&fit=crop&q=80&w=1920"
      alt="Gimnasio moderno"
      class="hero-bg-img"
      loading="eager"
      fetchpriority="high"
    />
    <div class="hero-bg-overlay"></div>
  </div>

  <!-- Content -->
  <div class="hero-content">
    <div class="hero-inner">
      <!-- Logo - DOMINANTE -->
      <div class="hero-logo-container">
        <img 
          src="/logo-blanco.png" 
          alt="Jairo Traine - Entrenador Personal" 
          class="hero-logo"
          width="600"
          height="288"
        />
        <!-- Nombre (wordmark) debajo del isotipo -->
        <img
          src="/nombre-blanco.png"
          alt="Jairo Traine - Marca"
          class="hero-wordmark"
          width="360"
          height="64"
        />
        <!-- Brandline: Soy tu MAYOR fan -->
        <div class="hero-title">
          <span class="hero-title-text">Soy tu </span>
          <span class="hero-title-accent">mayor</span>
          <span class="hero-title-text"> fan</span>
        </div>
      </div>
      
      <!-- Descripción -->
      <p class="hero-description">
        Te ayudo a lograr el cambio físico que deseas con entrenamientos personalizados, planes de alimentación, asesoría de suplementos y un seguimiento real para que consigas resultados duraderos.
      </p>

      <!-- CTA Buttons -->
      <div class="hero-buttons">
        <a 
          href="/contacto" 
          class="hero-btn hero-btn-primary"
        >
          Empieza Ahora
          <svg class="hero-btn-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <a 
          href="#servicios" 
          class="hero-btn hero-btn-secondary"
        >
          Ver Servicios
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Hero Section - Sin scroll interno, logos dominantes */
  .hero-section {
    position: relative;
    width: 100%;
    min-height: 100svh;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    overflow: hidden;
    box-sizing: border-box;
    padding-top: 0;
  }

  /* Background */
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  .hero-bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .hero-bg-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0.70), rgba(0, 0, 0, 0.80));
  }

  /* Content Container */
  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.25rem 0 1.25rem;
    padding-top: var(--header-h, 64px);
    box-sizing: border-box;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    height: 100%;
    min-height: 100%;
  }

  .hero-inner {
    width: 100%;
    max-width: 42rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: clamp(1rem, 2.5svh, 2rem);
    height: calc(100svh - var(--header-h, 64px));
    min-height: calc(100svh - var(--header-h, 64px));
    padding-top: clamp(0.5rem, 1.5svh, 1rem);
    padding-bottom: clamp(0.125rem, 0.5svh, 0.5rem);
  }

  /* Logo Container - DOMINANTE, MÁS ARRIBA */
  .hero-logo-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    gap: 0.25rem;
    margin: 0;
    margin-top: clamp(-2rem, -5svh, -3rem);
    flex-shrink: 0;
  }

  /* Logo Principal - MUY GRANDE Y DOMINANTE, MÁS ARRIBA - 50% MÁS GRANDE */
  .hero-logo {
    height: clamp(16rem, 45svh, 35rem);
    width: auto;
    max-width: min(90vw, 600px);
    margin: -15%;
    margin-top: clamp(-4rem, -8svh, -6rem);
    object-fit: contain;
    flex-shrink: 0;
  }

  /* Wordmark - MUY GRANDE CON MÁRGENES DOBLES */
  .hero-wordmark {
    height: clamp(12rem, 30svh, 27rem);
    width: auto;
    max-width: min(85vw, 500px);
    margin: -20%;
    margin-top: clamp(-6rem, -12svh, -9rem);
    margin-bottom: clamp(-4rem, -8svh, -6rem);
    object-fit: contain;
    flex-shrink: 0;
  }

  /* Title - Espaciado equilibrado y con encanto */
  .hero-title {
    margin-top: clamp(1rem, 3svh, 2rem);
    margin-bottom: clamp(0.75rem, 2svh, 1.25rem);
    font-size: clamp(1.5rem, 4.5svh, 3rem);
    font-weight: 900;
    line-height: 1.2;
    flex-shrink: 0;
  }
  .hero-title-text {
    color: white;
  }
  .hero-title-accent {
    color: #4FFF85;
  }

  /* Description - Espaciado equilibrado */
  .hero-description {
    font-size: clamp(0.8125rem, 1.8svh, 1.125rem);
    color: rgba(255, 255, 255, 0.9);
    max-width: min(48rem, 90vw);
    margin: 0 auto;
    line-height: 1.7;
    margin-top: 0;
    margin-bottom: clamp(0.75rem, 2svh, 1.5rem);
    padding: 0 0.5rem;
    flex-shrink: 0;
  }

  /* Buttons */
  .hero-buttons {
    display: flex;
    flex-direction: column;
    gap: clamp(0.625rem, 1.8svh, 1rem);
    justify-content: center;
    align-items: center;
    width: 100%;
    max-width: min(100%, 32rem);
    margin: 0 auto;
    margin-top: 0;
    padding: 0 0.5rem;
    flex-shrink: 0;
  }

  .hero-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: clamp(0.75rem, 2svh, 0.875rem) clamp(1.5rem, 4vw, 2.5rem);
    font-size: clamp(1rem, 2.5svh, 1.125rem);
    font-weight: 900;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    transform: scale(1);
    text-decoration: none;
    width: 100%;
    max-width: min(20rem, 85vw);
    box-sizing: border-box;
  }

  .hero-btn:hover {
    transform: scale(1.05);
  }

  .hero-btn-primary {
    background-color: #4FFF85;
    color: #1a1a1a;
    box-shadow: 0 4px 12px rgba(79, 255, 133, 0.3);
  }
  .hero-btn-primary:hover {
    background-color: #7CFF9F;
    box-shadow: 0 6px 16px rgba(79, 255, 133, 0.4);
  }

  .hero-btn-secondary {
    background-color: transparent;
    color: white;
    border: 2px solid white;
  }
  .hero-btn-secondary:hover {
    background-color: white;
    color: #1a1a1a;
  }

  .hero-btn-icon {
    width: 1.25rem;
    height: 1.25rem;
    margin-left: 0.5rem;
  }

  /* Responsive - Mobile (celulares pequeños) */
  @media (max-width: 639px) {
    .hero-content {
      padding-bottom: 0.25rem;
    }
    .hero-inner {
      gap: clamp(0.75rem, 2svh, 1.5rem);
      padding-top: clamp(0.25rem, 1svh, 0.75rem);
      padding-bottom: clamp(0.125rem, 0.5svh, 0.5rem);
      height: calc(100svh - var(--header-h, 64px));
      min-height: calc(100svh - var(--header-h, 64px));
    }
    .hero-logo {
      height: clamp(16rem, 45svh, 28rem);
    }
    .hero-wordmark {
      height: clamp(12rem, 30svh, 22rem);
    }
    .hero-title {
      margin-top: clamp(0.75rem, 2.5svh, 1.5rem);
      margin-bottom: clamp(0.5rem, 1.5svh, 1rem);
      font-size: clamp(1.25rem, 4svh, 2.5rem);
    }
    .hero-description {
      font-size: clamp(0.8125rem, 1.8svh, 1rem);
      margin-bottom: clamp(0.5rem, 1.5svh, 1rem);
      padding: 0 0.5rem;
    }
    .hero-buttons {
      gap: clamp(0.5rem, 1.5svh, 0.75rem);
      padding: 0 0.5rem;
      margin-bottom: 0;
    }
    .hero-btn {
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      width: 100%;
      max-width: 18rem;
    }
  }

  /* Responsive - Tablet */
  @media (min-width: 640px) {
    .hero-content {
      padding: 0 1.5rem 1.5rem 1.5rem;
      padding-top: var(--header-h, 64px);
    }
    .hero-inner {
      gap: clamp(1.25rem, 3svh, 2.25rem);
      padding-top: clamp(0.75rem, 2svh, 1.25rem);
      padding-bottom: clamp(0.75rem, 2svh, 1.25rem);
    }
    .hero-logo-container {
      gap: 0.5rem;
      margin: 0;
      margin-top: clamp(-2.5rem, -6svh, -4rem);
    }
    .hero-logo {
      height: clamp(22rem, 55svh, 38rem);
      margin-top: clamp(-6rem, -12svh, -8rem);
    }
    .hero-wordmark {
      height: clamp(18rem, 42svh, 30rem);
      margin-top: clamp(-10rem, -20svh, -14rem);
      margin-bottom: clamp(-8rem, -16svh, -11rem);
    }
    .hero-title {
      margin-top: clamp(1.5rem, 4svh, 2.5rem);
      margin-bottom: clamp(1rem, 2.5svh, 1.5rem);
      font-size: clamp(2rem, 5.5svh, 4rem);
    }
    .hero-description {
      font-size: clamp(1rem, 2.8svh, 1.25rem);
      margin-top: 0;
      margin-bottom: clamp(1.25rem, 3svh, 2rem);
    }
    .hero-buttons {
      flex-direction: row;
      gap: 1.25rem;
      width: auto;
    }
    .hero-btn {
      width: auto;
      min-width: 12rem;
    }
  }

  /* Responsive - Desktop */
  @media (min-width: 1024px) {
    .hero-content {
      padding: 0 3rem 2rem 3rem;
      padding-top: var(--header-h, 64px);
    }
    .hero-inner {
      gap: clamp(1.5rem, 3.5svh, 2.5rem);
      padding-top: clamp(1rem, 2.5svh, 1.5rem);
      padding-bottom: clamp(1rem, 2.5svh, 1.5rem);
    }
    .hero-logo-container {
      gap: 0.75rem;
      margin: 0;
      margin-top: clamp(-3rem, -7svh, -5rem);
    }
    .hero-logo {
      height: clamp(24rem, 60svh, 42rem);
      margin-top: clamp(-7rem, -14svh, -9rem);
    }
    .hero-wordmark {
      height: clamp(19.5rem, 45svh, 33rem);
      margin-top: clamp(-12rem, -24svh, -16rem);
      margin-bottom: clamp(-10rem, -20svh, -13rem);
    }
    .hero-title {
      margin-top: clamp(2rem, 5svh, 3.5rem);
      margin-bottom: clamp(1.25rem, 3svh, 2rem);
      font-size: clamp(2.5rem, 6svh, 4.5rem);
    }
    .hero-description {
      font-size: clamp(1.125rem, 3svh, 1.375rem);
      margin-top: 0;
      margin-bottom: clamp(1.5rem, 3.5svh, 2.5rem);
    }
    .hero-buttons {
      gap: 1.5rem;
      margin-top: 0.75rem;
    }
  }

  /* Responsive - Large Desktop */
  @media (min-width: 1280px) {
    .hero-content {
      padding-top: var(--header-h, 64px);
    }
    .hero-inner {
      gap: clamp(1.75rem, 4svh, 3rem);
      padding-top: clamp(1.25rem, 3svh, 2rem);
      padding-bottom: clamp(1.25rem, 3svh, 2rem);
    }
    .hero-logo-container {
      margin: 0;
      margin-top: clamp(-3.5rem, -8svh, -6rem);
    }
    .hero-logo {
      height: clamp(26rem, 65svh, 45rem);
      margin-top: clamp(-8rem, -16svh, -10rem);
    }
    .hero-wordmark {
      height: clamp(21rem, 48svh, 36rem);
      margin-top: clamp(-14rem, -28svh, -20rem);
      margin-bottom: clamp(-12rem, -24svh, -16rem);
    }
    .hero-title {
      margin-top: clamp(2.5rem, 6svh, 4.5rem);
      margin-bottom: clamp(1.5rem, 3.5svh, 2.5rem);
      font-size: clamp(3rem, 6.5svh, 5rem);
    }
    .hero-description {
      margin-top: 0;
      margin-bottom: clamp(2rem, 4svh, 3rem);
    }
  }

  /* Asegurar que no haya scroll interno */
  @media (max-height: 600px) {
    .hero-content {
      padding-top: var(--header-h, 64px);
    }
    .hero-inner {
      gap: clamp(0.75rem, 1.8svh, 1.25rem);
      padding-top: clamp(0.5rem, 1.2svh, 0.75rem);
      padding-bottom: clamp(0.5rem, 1.2svh, 0.75rem);
    }
    .hero-logo-container {
      gap: 0.25rem;
      margin: 0;
      margin-top: clamp(-1rem, -2.5svh, -1.5rem);
    }
    .hero-logo {
      height: clamp(14rem, 35svh, 20rem);
      margin: -12%;
      margin-top: clamp(-3rem, -6svh, -4rem);
    }
    .hero-wordmark {
      height: clamp(10.5rem, 24svh, 15rem);
      margin-top: clamp(-6rem, -12svh, -8rem);
      margin-bottom: clamp(-4rem, -8svh, -6rem);
    }
    .hero-title {
      margin-top: clamp(1rem, 2.5svh, 1.75rem);
      margin-bottom: clamp(0.75rem, 1.5svh, 1rem);
      font-size: clamp(1.25rem, 3.5svh, 2rem);
    }
    .hero-description {
      font-size: clamp(0.75rem, 1.8svh, 0.95rem);
      margin-top: 0;
      margin-bottom: clamp(0.75rem, 1.8svh, 1.25rem);
    }
    .hero-buttons {
      gap: clamp(0.5rem, 1.5svh, 0.75rem);
    }
    .hero-btn {
      padding: 0.75rem 2rem;
      font-size: 1rem;
    }
  }
</style>
