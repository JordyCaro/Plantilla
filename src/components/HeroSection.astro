<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?auto=format&fit=crop&q=60&w=600"
      alt="Gimnasio moderno"
      class="w-full h-full object-cover"
      loading="eager"
      fetchpriority="high"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/60 to-black/80"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32 text-center">
    <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-white mb-6 leading-tight">
      <span class="block">Transforma</span>
      <span class="block text-primary-light">Tu Cuerpo y</span>
      <span class="block">Tu Mente</span>
    </h1>

    <p class="text-2xl sm:text-3xl md:text-4xl font-bold text-primary-light mb-4 animate-pulse">
      Soy tu mayor fan
    </p>

    <p class="text-lg sm:text-xl text-gray-200 mb-8 max-w-2xl mx-auto">
      Entrenamiento personalizado dise√±ado para ti. Resultados reales, transformaciones duraderas.
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a 
        href="/contacto" 
        class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white bg-primary-dark hover:bg-primary rounded-full transition-all duration-300 transform hover:scale-105 shadow-2xl w-full sm:w-auto"
      >
        Empieza Ahora
        <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
      <a 
        href="#servicios" 
        class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white border-2 border-white hover:bg-white hover:text-black rounded-full transition-all duration-300 transform hover:scale-105 w-full sm:w-auto"
      >
        Ver Servicios
      </a>
    </div>
  </div>
</section>
