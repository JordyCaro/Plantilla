---
interface Props {
  title: string;
  description: string;
  icon: 'training' | 'nutrition' | 'online' | 'content' | 'transformation' | 'group';
  color: string;
  features: string[];
  tags?: string[];
  href: string;
}

const { title, description, icon, color, features, tags = [], href } = Astro.props;

const icons = {
  training: `<path stroke="#7BA82F" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />`,
  nutrition: `<path stroke="#7BA82F" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  online: `<path stroke="#7BA82F" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`,
  content: `<path stroke="#7BA82F" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />`,
  transformation: `<path stroke="#7BA82F" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  group: `<path stroke="#7BA82F" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />`
};
---

<div class="group relative p-8 rounded-2xl bg-white/90 dark:bg-gray-800/90 shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300 overflow-hidden flex flex-col h-full backdrop-blur-sm">
  <div class="relative flex flex-col items-center text-center flex-grow">
    <div class={`w-20 h-20 bg-gradient-to-br from-${color}-light to-${color}-dark rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg mx-auto`}>
      <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[icon]} />
    </div>
    
    <h3 class={`text-2xl font-bold text-gray-600 dark:text-white mb-4 group-hover:text-${color}-dark dark:group-hover:text-${color}-light transition-colors duration-300 text-center`}>
      {title}
    </h3>
    
    <p class="text-gray-600 dark:text-gray-300 mb-8 text-lg text-center">
      {description}
    </p>

    <div class="w-full space-y-6 flex-grow">
      <div>
        <h4 class="text-lg font-semibold text-gray-600 dark:text-white mb-4 text-center">¿Qué incluye?</h4>
        <ul class="space-y-3">
          {features.map(feature => (
            <li class="flex items-start gap-3 justify-center">
              <svg class={`w-6 h-6 text-${color}-dark dark:text-${color}-light flex-shrink-0 mt-1`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-600 dark:text-gray-300">{feature}</span>
            </li>
          ))}
        </ul>
      </div>

      {tags.length > 0 && (
        <div class="w-full pt-6 border-t border-gray-200 dark:border-gray-700">
          <div class="flex flex-wrap gap-2 justify-center">
            {tags.map(tag => (
              <span class={`px-4 py-2 rounded-lg bg-${color}-light/10 dark:bg-${color}-dark/10 text-${color}-dark dark:text-${color}-light text-sm font-medium border border-${color}-light/20 dark:border-${color}-dark/20 hover:scale-105 transition-transform duration-200`}>
                {tag}
              </span>
            ))}
          </div>
        </div>
      )}
    </div>

    <div class="pt-6 mt-6 border-t border-gray-200 dark:border-gray-700 flex gap-4 w-full">
      <a href={href} class={`flex-1 inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-gradient-to-r from-${color}-dark to-${color} rounded-lg hover:from-${color} hover:to-${color}-dark transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl`}>
        Más información
        <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</div>
