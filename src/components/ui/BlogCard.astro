---
export interface Props {
  title: string;
  excerpt: string;
  image: string;
  date: string;
  category: string;
  readTime: string;
  slug: string;
}

const { title, excerpt, image, date, category, readTime, slug } = Astro.props;
---

<article class="blog-card group cursor-pointer">
  <a href={`/blog/${slug}`} class="block">
    <div class="relative overflow-hidden rounded-xl mb-4">
      <img 
        src={image} 
        alt={title}
        class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
        loading="lazy"
      />
      <div class="absolute top-4 left-4">
        <span class="px-3 py-1 bg-primary-dark text-white text-sm font-bold rounded-full">
          {category}
        </span>
      </div>
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    </div>
    
    <div class="p-1">
      <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-3">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          {date}
        </span>
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          {readTime}
        </span>
      </div>
      
      <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-primary-dark dark:group-hover:text-primary-light transition-colors duration-300">
        {title}
      </h3>
      
      <p class="text-gray-600 dark:text-gray-400 leading-relaxed mb-4">
        {excerpt}
      </p>
      
      <div class="flex items-center text-primary-dark dark:text-primary-light font-semibold group-hover:gap-2 transition-all duration-300">
        <span>Leer m√°s</span>
        <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </div>
    </div>
  </a>
</article>


