<style>
  .outerdiv{ width:100%; min-height:0; display:flex; align-items:center; justify-content:center; }
  .innerdiv{
    width:100%;
    margin:1rem;
    display:grid; gap:1.25rem;
    grid-template-columns: repeat(12, 1fr);
    grid-auto-rows: 18rem;
  }
  .eachdiv{ padding:1rem 1.5rem; border-radius:0.9rem; background: #0b0b0b; border: 1px solid rgba(255,255,255,.08); box-shadow: 0 8px 24px rgba(0,0,0,.35); color:#fff; }
  .div3, .div4{ background: #0d0d0d; }
  /* Grid spans (desktop) */
  .div1{ grid-column: span 6; grid-row: span 1; }
  .div2{ grid-column: span 3; grid-row: span 1; }
  .div3{ grid-column: span 3; grid-row: span 2; }
  .div4{ grid-column: span 3; grid-row: span 1; }
  .div5{ grid-column: span 6; grid-row: span 1; }

  /* Typography and accents */
  .name{ color:#fff; font-size:.95rem; margin-bottom:.1rem; font-weight:700; }
  .designation{ color:#cbd5e1; font-size:.8rem; }
  .designation-primary{ color: var(--tw-color-primary, #4FFF85); }
  .review h4{ font-size:1.25rem; color:#fff; font-weight:800; line-height:1.5; margin-bottom:.6rem; }
  .review p{ font-size:.95rem; color:#e5e7eb; opacity:.9; line-height:1.5; }
  .userdetails{ display:flex; }
  .imgbox{ margin-right:1rem; }
  .imgbox img{ border-radius:50%; width:2.25rem; height:2.25rem; object-fit:cover; border:2px solid rgba(255,255,255,.5); }

  /* Responsive */
  @media (max-width: 1024px){
    .innerdiv{ grid-template-columns: repeat(6, 1fr); grid-auto-rows: 18rem; }
    .div1{ grid-column: span 6; }
    .div2{ grid-column: span 3; }
    .div3{ grid-column: span 3; grid-row: span 2; }
    .div4{ grid-column: span 3; }
    .div5{ grid-column: span 6; }
  }
  @media (max-width: 640px){
    #transformations{ display:flex; flex-direction:column; height:100%; min-height:100%; }
    /* Scroll interno de la sección en móvil */
    #transformations .outerdiv{ 
      flex: 1 1 auto; 
      overflow-y: auto; 
      overflow-x: hidden;
      -webkit-overflow-scrolling: touch; 
      width: 100%;
      max-height: calc(100svh - 160px);
    }
    #transformations .outerdiv::-webkit-scrollbar{ display:none; }
    .outerdiv{ padding-bottom: 1rem; }
    .innerdiv{ grid-template-columns: repeat(1, 1fr); grid-auto-rows: auto; gap: 1rem; }
    .eachdiv{ padding:1rem 1.1rem; }
    .div1,.div2,.div3,.div4,.div5{ grid-column: span 1; grid-row: auto; }
    .review h4{ font-size:1.05rem; margin-bottom:.5rem; }
    .review p{ font-size:.9rem; line-height:1.45; }
  }
</style>



