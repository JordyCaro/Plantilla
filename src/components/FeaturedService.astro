---
interface Props {
  title: string;
  description: string;
  features: string[];
  image: string;
  color: string;
  href: string;
  imagePosition?: 'left' | 'right';
}

const { title, description, features, image, color, href, imagePosition = 'right' } = Astro.props;
---

<div class="relative overflow-hidden py-16">
  <!-- Decorative elements -->
  <div class={`absolute ${imagePosition === 'right' ? '-right-64' : '-left-64'} top-0 w-96 h-96 bg-${color}-light/20 dark:bg-${color}-dark/20 rounded-full filter blur-3xl`}></div>
  
  <div class="w-full px-4 sm:px-6 lg:px-8">
    <div class={`grid lg:grid-cols-2 gap-12 items-center`}>
      <div class={`${imagePosition === 'right' ? 'order-1' : 'order-2'} px-4`}>
        <h3 class={`text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-6 group-hover:text-${color}-dark dark:group-hover:text-${color}-light`}>
          {title}
        </h3>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
          {description}
        </p>
        <ul class="space-y-4 mb-8">
          {features.map(feature => (
            <li class="flex items-start gap-3">
              <svg class={`w-6 h-6 text-${color}-dark dark:text-${color}-light flex-shrink-0 mt-1`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-600 dark:text-gray-300">{feature}</span>
            </li>
          ))}
        </ul>
        <div class="flex gap-4">
          <a 
            href={href}
            class={`inline-flex items-center px-6 py-3 rounded-lg text-white bg-gradient-to-r from-${color}-dark to-${color} hover:from-${color} hover:to-${color}-dark transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl`}
          >
            Explorar Servicio
            <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a 
            href="/contacto"
            class={`inline-flex items-center px-6 py-3 text-${color}-dark dark:text-${color}-light border-2 border-${color}-dark/20 dark:border-${color}-light/20 rounded-lg hover:bg-${color}-light/10 dark:hover:bg-${color}-dark/10 transform hover:scale-105 transition-all duration-200`}
          >
            Contactar
          </a>
        </div>
      </div>
      <div class={`relative ${imagePosition === 'right' ? 'order-2' : 'order-1'} px-4`}>
        <div class="aspect-video rounded-2xl overflow-hidden shadow-2xl transform hover:scale-105 transition-all duration-500">
          <img 
            src={image}
            alt={title}
            class="w-full h-full object-cover"
          />
        </div>
        <!-- Decorative elements -->
        <div class={`absolute -z-10 ${imagePosition === 'right' ? '-right-20' : '-left-20'} bottom-0 w-64 h-64 bg-${color}-light/20 dark:bg-${color}-dark/20 rounded-full filter blur-3xl animate-pulse`}></div>
      </div>
    </div>
  </div>
</div>
